@model IEnumerable<Interdiciplinar1._1.Models.Modelo>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de Modelos";
}

<div class="panel	panel-primary">
    <div class="panel-heading">
        Relação	de Modelos	registrados
    </div>
    <div class="panel-body">
        <table class="table	table-striped	table-hover">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>
                    <th>Categoria</th>
                    <th>Fabricante</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)

                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fabricante.Nome)
                        </td>
                        <td>
                            @Html.ActionLink("Alterar", "Edit", new { id = item.ModeloId })	|
                            @Html.ActionLink("Detalhes", "Details", new { id = item.ModeloId })	|
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ModeloId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Registrar um novo Modelo", "Create", null, new { @class = "btn	btn-success" })
    </div>
</div>
@section	styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
}
@section	ScriptPage	{
    <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liModelos').addClass("active");
            $('.table').dataTable({
                "order": [[0, "asc"]]
            });

        });
    </script>
}
